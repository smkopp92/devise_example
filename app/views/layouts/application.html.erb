<!DOCTYPE html>
<html>
  <head>
    <title>DeviseExample</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if user_signed_in? %>
          <li>
            <%= link_to 'Sign Out', '#' %></li>
          </li>
        <% else %>
          <%= link_to 'Sign In', new_user_session_path %></li>
          <%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
